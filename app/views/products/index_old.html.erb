<div class="min-h-screen">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-500 via-blue-600 to-blue-700 text-white">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="relative container mx-auto px-4 py-24 lg:py-32">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl lg:text-7xl font-bold mb-6 leading-tight">
          Party Like<br>
          <span class="text-yellow-300">Never Before</span>
        </h1>
        <p class="text-xl lg:text-2xl mb-8 opacity-90 max-w-2xl mx-auto">
          Transform any space into the ultimate party destination with our premium lighting, sound, and atmosphere essentials.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to "Shop Now", products_path, class: "bg-yellow-400 text-gray-900 px-8 py-4 rounded-lg font-bold text-lg hover:bg-yellow-300 transition-all transform hover:scale-105 shadow-lg" %>
          <%= link_to "View Cart", cart_path, class: "border-2 border-white text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-white hover:text-blue-600 transition-all" %>
      </div>
    </div>
    <!-- Floating elements for visual interest -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-yellow-300 rounded-full opacity-20 animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-32 h-32 bg-blue-300 rounded-full opacity-10 animate-bounce"></div>
    <div class="absolute top-1/2 right-20 w-16 h-16 bg-white rounded-full opacity-20 animate-pulse delay-1000"></div>
  </section>

  <!-- Featured Products Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Featured Party Essentials</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Everything you need to create unforgettable moments and elevate your celebrations.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <% @products.each do |product| %>
      <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 group">
        <%= link_to product_path(product), class: "block" do %>
          <div class="relative aspect-square overflow-hidden bg-gradient-to-br from-blue-50 to-blue-100">
            <%= image_tag product.image_url, class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-300", alt: product.name %>
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="absolute top-3 right-3 bg-blue-500 text-white text-xs px-2 py-1 rounded-full font-medium">
              <%= product.category %>
            </div>
          </div>

          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2 group-hover:text-blue-600 transition-colors">
              <%= product.name %>
            </h3>

            <div class="flex items-center justify-between mb-4">
              <span class="text-3xl font-bold text-blue-600">
                <%= product.formatted_price %>
              </span>
              <div class="flex items-center text-sm text-gray-500">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
                <span>4.8</span>
              </div>
            </div>

            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
              Professional-grade party essential with premium features and easy setup.
            </p>
          </div>
        <% end %>

        <div class="px-6 pb-6">
          <%= form_with url: cart_items_path, method: :post, class: "space-y-3" do |f| %>
            <%= f.hidden_field :product_id, value: product.id %>

            <div class="flex items-center space-x-2">
              <label for="quantity_<%= product.id %>" class="text-sm font-medium text-gray-700">Qty:</label>
              <%= select_tag :quantity,
                  options_for_select(1..10, 1),
                  class: "border border-gray-300 rounded-md px-2 py-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                  id: "quantity_#{product.id}" %>
            </div>

            <%= f.submit "Add to Cart",
                class: "w-full bg-gradient-to-r from-blue-500 to-blue-600 text-white py-3 px-4 rounded-lg hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 text-sm font-medium transition-all transform hover:scale-105 shadow-md" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
