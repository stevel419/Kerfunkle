  }
  
  .carousel-next {
    right: 10px;
  }
  
  .products-grid-4 {
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
  }
  
  .section-header-flex {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
}

@media (max-width: 768px) {
  .carousel-content {
    padding-left: 3rem; /* Reduce padding on tablets */
  }
}

@media (max-width: 576px) {
  .carousel-title {
    font-size: 1.5rem;
  }
  
  .carousel-description {
    font-size: 0.875rem;
  }
  
  .hero-carousel-section {
    height: 400px;
  }
  
  .carousel-container {
    padding: 0 1rem;
  }
  
