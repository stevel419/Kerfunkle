    padding-left: 2rem; /* Smaller padding on mobile */
  }
  
  .products-grid-4 {
    grid-template-columns: 1fr;
  }
}
</style>

<script>
  // Use turbo:load for Turbo-enabled Rails apps
  document.addEventListener('turbo:load', initCarousel);
  document.addEventListener('DOMContentLoaded', initCarousel);

  function initCarousel() {
    const carouselTrack = document.querySelector('.carousel-track');
    const dots = document.querySelectorAll('.carousel-dot');
    const carouselWrapper = document.querySelector('.carousel-wrapper');
    const prevButton = document.getElementById('prevSlide');
    const nextButton = document.getElementById('nextSlide');
    
    // Check if carousel elements exist
    if (!carouselTrack || !dots.length || !carouselWrapper) {
      return;
    }

    let currentSlide = 0;
    let autoplayInterval;
    const totalSlides = dots.length;

    function updateSlide() {
      // Update carousel track position
      carouselTrack.style.transform = `translateX(-${currentSlide * 100}%)`;
      
      // Update active dot
      dots.forEach((dot, index) => {
        if (index === currentSlide) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      updateSlide();
      resetAutoplay();
    }

    function prevSlide() {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      updateSlide();
      resetAutoplay();
    }

    function goToSlide(index) {
      currentSlide = index;
      updateSlide();
      resetAutoplay();
    }

    function resetAutoplay() {
      clearInterval(autoplayInterval);
      autoplayInterval = setInterval(nextSlide, 6000);
    }

    // Initialize first slide
    updateSlide();

    // Initialize autoplay
    autoplayInterval = setInterval(nextSlide, 6000);

    // Pause on hover
    carouselWrapper.addEventListener('mouseenter', () => {
      clearInterval(autoplayInterval);
    });

    carouselWrapper.addEventListener('mouseleave', () => {
      resetAutoplay();
    });

    // Add click events for navigation buttons
    if (prevButton) {
      prevButton.addEventListener('click', prevSlide);
    }
    
    if (nextButton) {
      nextButton.addEventListener('click', nextSlide);
    }

    // Add click events for dots
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => goToSlide(index));
    });
  }
</script>
