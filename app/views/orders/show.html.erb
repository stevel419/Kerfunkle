  color: hsl(var(--primary));
  flex-shrink: 0;
}

.address-text {
  line-height: 1.6;
  color: hsl(var(--foreground));
}

/* Animations */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* Responsive Design */
@media (max-width: 968px) {
  .content-grid {
    grid-template-columns: 1fr;
  }

  .sidebar-section {
    order: 2;
  }
}

@media (max-width: 768px) {
  .order-detail-title {
    font-size: 1.5rem;
  }

  .header-content {
    flex-direction: column;
  }

  .detail-item {
    flex-wrap: wrap;
  }

  .detail-item-total {
    width: 100%;
    text-align: right;
  }
}

@media (max-width: 576px) {
  .order-detail-header {
    padding: 1.5rem 0 2rem;
  }

  .order-detail-content {
    padding: 1.5rem 0 2rem;
  }

  .section-header,
  .section-content {
    padding: 1.25rem;
  }

  .detail-item-image {
    width: 60px;
    height: 60px;
  }
}
</style>
