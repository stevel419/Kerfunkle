  background: #e0e7ff;
  color: #3730a3;
}

.status-badge-large.shipped .status-dot {
  background: #6366f1;
}

.status-badge-large.completed {
  background: #d1fae5;
  color: #065f46;
}

.status-badge-large.completed .status-dot {
