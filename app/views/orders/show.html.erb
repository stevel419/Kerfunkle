  background: #ef4444;
}

/* Order Content */
.order-detail-content {
  padding: 2rem 0 3rem;
  margin-top: -1rem;
}

.content-grid {
  display: grid;
  grid-template-columns: 1fr 380px;
  gap: 1.5rem;
}

.content-section {
  min-width: 0;
}

.sidebar-section {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

