  justify-content: space-between;
  align-items: center;
  padding: 0.75rem 0;
}

.summary-row.total {
  margin-top: 0.5rem;
}

.summary-label {
  font-size: 0.875rem;
  color: hsl(var(--muted-foreground));
}

.summary-row.total .summary-label {
  font-size: 1.125rem;
  font-weight: 700;
  color: hsl(var(--foreground));
