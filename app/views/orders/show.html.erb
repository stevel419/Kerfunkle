<div class="order-detail-page">
  <!-- Order Detail Header -->
  <section class="order-detail-header">
    <div class="order-detail-container">
      <div class="header-top">
        <%= link_to orders_path, class: "back-link" do %>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"></path>
          </svg>
          Back to Orders
        <% end %>
      </div>
      <div class="header-content">
        <div class="header-info">
          <h1 class="order-detail-title">Order #<%= @order.id %></h1>
          <div class="order-detail-meta">
            <span class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              Placed on <%= @order.created_at.strftime('%B %d, %Y at %I:%M %p') %>
            </span>
            <% if @order.paid_at %>
              <span class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
                Paid on <%= @order.paid_at.strftime('%B %d, %Y') %>
              </span>
            <% end %>
          </div>
        </div>
        <span class="status-badge-large <%= @order.status %>">
          <span class="status-dot"></span>
          <%= @order.status.titleize %>
        </span>
      </div>
    </div>
  </section>

  <!-- Order Content -->
  <section class="order-detail-content">
    <div class="order-detail-container">
      <div class="content-grid">
        <!-- Order Items -->
        <div class="content-section">
          <div class="section-card">
            <div class="section-header">
              <h2 class="section-title">Order Items</h2>
              <span class="item-count"><%= pluralize(@order_items.count, 'item') %></span>
            </div>
            <div class="section-content">
              <div class="items-list">
                <% @order_items.each do |item| %>
                  <div class="detail-item">
                    <div class="detail-item-image">
                      <%= image_tag item.product_image_url, alt: item.product_name %>
                    </div>
                    <div class="detail-item-info">
                      <h3 class="detail-item-name"><%= item.product_name %></h3>
                      <div class="detail-item-meta">
                        <span class="detail-item-quantity">Quantity: <%= item.quantity %></span>
                        <span class="detail-item-price">
                          <%= number_to_currency(item.price_at_purchase) %> each
                        </span>
                      </div>
                    </div>
                    <div class="detail-item-total">
                      <%= number_to_currency(item.price_at_purchase * item.quantity) %>
                    </div>
                  </div>
                <% end %>
              </div>

              <!-- Order Summary -->
              <div class="order-summary">
                <div class="summary-row">
                  <span class="summary-label">Subtotal</span>
                  <span class="summary-value"><%= number_to_currency(@order_items.sum { |item| item.price_at_purchase * item.quantity }) %></span>
                </div>
                <div class="summary-row">
                  <span class="summary-label">Shipping</span>
                  <span class="summary-value">Free</span>
                </div>
                <div class="summary-row">
                  <span class="summary-label">Tax</span>
                  <span class="summary-value">$0.00</span>
                </div>
                <div class="summary-divider"></div>
                <div class="summary-row total">
                  <span class="summary-label">Total</span>
                  <span class="summary-value"><%= number_to_currency(@order.total_amount) %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Order Information Sidebar -->
        <div class="sidebar-section">
          <!-- Customer Information -->
          <div class="section-card">
            <div class="section-header">
              <h2 class="section-title">Customer Information</h2>
            </div>
            <div class="section-content">
              <div class="info-group">
                <div class="info-label">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                  </svg>
                  Email
                </div>
                <div class="info-value"><%= @order.customer_email || @order.user.email %></div>
              </div>
            </div>
          </div>

          <!-- Shipping Address -->
          <% if @order.shipping_address.present? && @order.shipping_address.is_a?(Hash) %>
            <div class="section-card">
              <div class="section-header">
                <h2 class="section-title">Shipping Address</h2>
              </div>
              <div class="section-content">
                <div class="address-display">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                  <div class="address-text">
                    <% if @order.shipping_address['line1'] %>
                      <%= @order.shipping_address['line1'] %><br>
                    <% end %>
                    <% if @order.shipping_address['line2'] %>
                      <%= @order.shipping_address['line2'] %><br>
                    <% end %>
                    <% if @order.shipping_address['city'] %>
                      <%= @order.shipping_address['city'] %>, 
                    <% end %>
                    <% if @order.shipping_address['state'] %>
                      <%= @order.shipping_address['state'] %> 
                    <% end %>
                    <% if @order.shipping_address['postal_code'] %>
                      <%= @order.shipping_address['postal_code'] %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Payment Information -->
          <div class="section-card">
            <div class="section-header">
              <h2 class="section-title">Payment Information</h2>
            </div>
            <div class="section-content">
              <div class="info-group">
                <div class="info-label">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                    <line x1="1" y1="10" x2="23" y2="10"></line>
                  </svg>
                  Payment Method
                </div>
                <div class="info-value">Credit Card</div>
              </div>
              <% if @order.stripe_payment_intent_id %>
                <div class="info-group">
                  <div class="info-label">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                      <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                    </svg>
                    Transaction ID
                  </div>
                  <div class="info-value small"><%= @order.stripe_payment_intent_id.first(20) %>...</div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<style>
